#import <Foundation/Foundation.h>

@interface NSDateFormatter (HHSoftAddition)

/**
 *  初始化一个格式类
 *
 *  @return
 */
+ (id)dateFormatter;
/**
 *  自定义展示的日期格式的初始化
 *
 *  @param dateFormat
 *
 *  @return
 */
+ (id)dateFormatterWithFormat:(NSString *)dateFormat;

/**
 *  默认初始化格式类(yyyy-MM-dd HH:mm:ss)
 *
 *  @return
 */
+ (id)defaultDateFormatter;

@end
