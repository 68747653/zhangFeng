#import <UIKit/UIKit.h>

@interface UINavigationBar (HHSoft)
/**
 *  指定背景颜色
 *
 *  @param backgroundColor 背景颜色
 */
-(void)setBarBackoundColor:(UIColor *)backgroundColor;

/**
 *  指定背景图片
 *
 *  @param backgroundImage 背景图片
 */
-(void)setBarBackoundImage:(UIImage *)backgroundImage;

/**
 *  指定返回按钮标题颜色
 *
 *  @param backButtonColor 返回标题颜色
 */
-(void)setBackButtonColor:(UIColor *)backButtonColor;


/**
 *  设置导航条标题（shadowColor为nil时，不设置阴影）
 *
 *  @param titleColor  标题颜色
 *  @param shadowColor 阴影颜色
 *  @param shadowSize  阴影偏移位置
 *  @param titleFont   标题字体
 */
-(void)setBarTitleColor:(UIColor *)titleColor shadowColor:(UIColor *)shadowColor shadowOffset:(CGSize)shadowSize titleFont:(UIFont *)titleFont;




@end
